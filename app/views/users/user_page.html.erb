<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <% if flash[:alert] %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <%= flash[:alert] %>
        </div>
      <% end %>

      <% if flash[:notice] %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
          <%= flash[:notice] %>
        </div>
      <% end %>

      <div class="card shadow-sm">
        <div class="card-header text-center bg-primary text-white">
          <h1 class="h4 mb-0">Welcome, <%= @current_user[:name] %>!</h1>
        </div>

        <div class="card-body">
          <p class="mb-3"><strong>Email:</strong> <%= @current_user[:email] %></p>

          <p class="mb-2"><strong>Location:</strong></p>
          <ul class="list-group">
            <li class="list-group-item"><strong>City:</strong> <%= @ip_info['city'] %></li>
            <li class="list-group-item"><strong>Region:</strong> <%= @ip_info['region'] %></li>
            <li class="list-group-item"><strong>Country:</strong> <%= @ip_info['country'] %></li>
          </ul>
        </div>

        <div class="card-footer text-center">
          <%= link_to 'Sign Out', user_path(@current_user[:email]), class: 'btn btn-danger', data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %>
        </div>
      </div>
    </div>
  </div>
</div>