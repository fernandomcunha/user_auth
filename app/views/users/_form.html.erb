<%= form_with model: @user, url: form_action_path, local: true, html: { class: 'needs-validation' } do |form| %>

  <% if form_action_path == users_path %>
    <div class="mb-3">
      <%= form.label :name, "Name", class: "form-label" %>
      <%= form.text_field :name, class: "form-control", placeholder: "Enter your name" %>
      <% if @user.errors[:name].any? %>
        <div class="text-danger">
          <%= @user.errors[:name].join(", ") %>
        </div>
      <% end %>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :email, "Email", class: "form-label" %>
    <%= form.email_field :email, class: "form-control", placeholder: "Enter your email" %>
    <% if @user.errors[:email].any? %>
      <div class="text-danger">
        <%= @user.errors[:email].join(", ") %>
      </div>
    <% end %>
  </div>
  
  <div class="mb-3">
    <%= form.label :password, "Password", class: "form-label" %>
    <%= form.password_field :password, class: "form-control", placeholder: "Enter your password" %>
    <% if @user.errors[:password].any? %>
      <div class="text-danger">
        <%= @user.errors[:password].join(", ") %>
      </div>
    <% end %>
  </div>
  
  <div class="d-grid">
    <%= form.submit form_action_path == users_path ? "Sign Up" : "Sign In", class: "btn btn-primary" %>
  </div>
<% end %>